{
  "manifest_version": 2,
  "name": "Answer Highlighter",
  "version": "1.0",
  "description": "Identifies questions and highlights correct answers on webpages",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Answer Highlighter"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
